# ==========================================
# MUSICMOOD ENVIRONMENT VARIABLES
# ==========================================

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/musicmood
# Railway: ${{Postgres.DATABASE_URL}}
# Docker: postgresql://musicmood:musicmood@postgres:5432/musicmood

# Redis
REDIS_URL=redis://localhost:6379
# Railway: ${{Redis.REDIS_URL}}
# Docker: redis://redis:6379

# Spotify API
# Get from: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# Server Configuration
PORT=3000
NODE_ENV=development
# Production: NODE_ENV=production

# Google OAuth (Optional)
# Get from: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your_google_client_id_here.apps.googleusercontent.com

# OpenWeatherMap API (Frontend - set in app.js)
# Get from: https://openweathermap.org/api
# OPENWEATHER_API_KEY=your_openweather_api_key_here
